      <!-- Interactions Section -->
      <section id="interactions" class="mb-20">
        <h2 class="font-eina02 mb-12 text-5xl font-semibold">Interactions</h2>

        <div class="mb-8">
          <p class="font-eina03 max-w-3xl text-lg text-gray-600">
            Interaction states maintain the minimal design philosophy while
