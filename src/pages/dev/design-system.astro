                  <div class="font-mono text-sm text-gray-600">
                    focus:ring-2 focus:ring-gray-900 focus:ring-offset-2
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Active States -->
        <div class="mb-12">
          <h3 class="font-eina03 mb-8 text-3xl font-medium">Active States</h3>
          <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
            <div>
              <h4 class="mb-4 text-lg font-semibold">Button Active</h4>
              <div class="space-y-4">
                <button
                  class="font-eina04 rounded-lg bg-gray-900 px-6 py-3 font-semibold text-white transition-all duration-150 hover:bg-gray-800 active:scale-95 active:bg-gray-950"
                >
                  Press Me
                </button>
                <div class="font-mono text-sm text-gray-600">
                  active:bg-gray-950 active:scale-95 transition-all duration-150
                </div>
              </div>
            </div>

            <div>
              <h4 class="mb-4 text-lg font-semibold">Navigation Active</h4>
              <nav class="space-y-2">
                <a
                  href="#"
                  class="block rounded-lg px-4 py-2 text-gray-700 transition-colors duration-200 hover:bg-gray-50 hover:text-gray-900"
