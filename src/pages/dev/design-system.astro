        <!-- Hover States -->
        <div class="mb-12">
          <h3 class="font-eina03 mb-8 text-3xl font-medium">Hover States</h3>
          <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
            <div>
              <h4 class="mb-4 text-lg font-semibold">Button Hovers</h4>
              <div class="space-y-4">
                <button
                  class="font-eina04 transform rounded-lg bg-gray-900 px-6 py-3 font-semibold text-white transition-all duration-200 hover:scale-105 hover:bg-gray-800"
                >
                  Hover Me
                </button>
                <button
                  class="font-eina04 rounded-lg border-2 border-gray-300 px-6 py-3 font-semibold text-gray-700 transition-all duration-200 hover:border-gray-400 hover:bg-gray-50"
