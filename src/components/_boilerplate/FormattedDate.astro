---
interface Props {
  date: Date | string | number | null | undefined
}

const { date } = Astro.props

const parsedDate =
  date instanceof Date ? date : date ? new Date(date) : new Date()
---

<time datetime={parsedDate.toISOString()}>
  {
    parsedDate.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
