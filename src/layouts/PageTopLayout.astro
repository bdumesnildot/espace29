---
interface Props {
  title: string
  backTo?: {
    href: string
    label: string
  }
}

const { title, backTo } = Astro.props
---

<div class="relative w-full px-2 sm:px-10">
  {
    backTo && (
      <nav class="absolute top-5 left-6 z-10 hidden sm:block">
        <a
          href={backTo.href}
          class="font-eina04 group flex items-center gap-1 font-medium text-gray-600 transition-colors duration-200 hover:text-gray-900"
          aria-label={`Return to ${backTo.label}`}
        >
          <svg
            class="h-4 w-4 transition-transform duration-200 group-hover:-translate-x-1"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"
            />
          </svg>
          <span class="text-sm sm:text-sm">{backTo.label}</span>
        </a>
      </nav>
    )
  }

  <h1
    class="font-eina01 w-full py-6 text-4xl font-semibold text-gray-900 sm:pt-16 sm:pb-25 sm:text-7xl"
  >
    {title}
  </h1>
</div>
